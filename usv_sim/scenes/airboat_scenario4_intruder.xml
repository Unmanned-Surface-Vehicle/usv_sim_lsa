<?xml version="1.0"?>

<!DOCTYPE UWSimScene SYSTEM "UWSimScene.dtd" >

<UWSimScene>
  <oceanState>
    <windx              > 1     </windx               >
    <windy              > 1     </windy               >
    <windSpeed          > 0     </windSpeed           >
    <depth              > 100   </depth               >
    <reflectionDamping  > 0.35  </reflectionDamping   >
    <waveScale          > 5e-8  </waveScale           >
    <isNotChoppy        > 0     </isNotChoppy         >
    <choppyFactor       > -1.5  </choppyFactor        >
    <crestFoamHeight    > 1.2   </crestFoamHeight     >
    <oceanSurfaceHeight > 1     </oceanSurfaceHeight  >
    <fog>
      <density> 0.1 </density>
      <color>
        <r> 0.017 </r>
        <g> 0.027 </g>
        <b> 0.079 </b>
      </color>
    </fog>
    <color>
        <r> 0.00  </r>
        <g> 0.41  </g>
        <b> 0.58  </b>
    </color>
    <attenuation>
      <r> 0.15  </r>
      <g> 0.15  </g>
      <b> 0.05  </b>
    </attenuation>
  </oceanState>
  
  <simParams>
    <disableShaders> 0 </disableShaders>
    <resw> 1152 </resw>
    <resh> 864 </resh>
  </simParams>

  <camera>
    <freeMotion> 1 </freeMotion>
    <objectToTrack>airboat/base_link</objectToTrack>
    <fov> 60 </fov>
    <aspectRatio> 1.33 </aspectRatio>
    <near> 1 </near>
    <far> 10000 </far>
    <position>
      <x>230</x>
      <y>95 </y>
      <z>15 </z>
    </position> 
    <lookAt>
      <x>245</x>
      <y>95 </y>
      <z>5 </z>
    </lookAt>
  </camera>

  <vehicle>
    <name>airboat</name>
    <file>urdf/airboat_uwsim.urdf</file>
    <jointValues>
      <joint> 0 </joint>
      <joint> 0 </joint>
    </jointValues>
     <position>
      <x> 240</x>
      <y> 95.2 </y>
      <z> 1.13 </z>
    </position>
    <orientation>
      <r>0 </r>
      <p>0 </p>
      <y>0 </y>
    </orientation>
  </vehicle>
  
   <vehicle>
    <name>intruder</name>
    <file>urdf/airboat_uwsim.urdf</file>
    <jointValues>
      <joint> 0 </joint>
      <joint> 0 </joint>
    </jointValues>
     <position>
      <x> 249</x>
      <y> 95 </y>
      <z> 1 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>-3.1415</y>
    </orientation>
  </vehicle>

  <rosInterfaces>   

    <ROSOdomToPAT>
      <topic> /airboat/state </topic>
      <vehicleName> airboat </vehicleName>
    </ROSOdomToPAT>

    
    <ROSOdomToPAT>
      <topic> /intruder/state </topic>
      <vehicleName> intruder </vehicleName>
    </ROSOdomToPAT> 
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/base_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>base_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/center_r_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>center_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/back_r_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>back_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/back_l_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>back_l_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/front_r_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>front_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/front_l_link</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>front_l_link</linkName>
    </OceanSurfaceToROSOceanVehicle> 
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/airboat/Surface/fwd</topic>
      <vehicleName>airboat</vehicleName>
      <linkName>fwd</linkName>
    </OceanSurfaceToROSOceanVehicle> 

    <!-- intruder -->

    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/base_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>base_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/center_r_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>center_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/back_r_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>back_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/back_l_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>back_l_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  

    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/front_r_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>front_r_link</linkName>
    </OceanSurfaceToROSOceanVehicle>  
    
    <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/front_l_link</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>front_l_link</linkName>
    </OceanSurfaceToROSOceanVehicle> 
    
     <OceanSurfaceToROSOceanVehicle>
      <topic>/intruder/Surface/fwd</topic>
      <vehicleName>intruder</vehicleName>
      <linkName>fwd</linkName>
    </OceanSurfaceToROSOceanVehicle>

    <!-- intruder -->
        
	  <ROSJointStateToArm> 
   		<topic>/airboat/joint_states</topic>
   		<vehicleName>airboat</vehicleName>
   	</ROSJointStateToArm>

    <ROSJointStateToArm> 
   		<topic>/intruder/joint_states</topic>
   		<vehicleName>intruder</vehicleName>
   	</ROSJointStateToArm>

  </rosInterfaces>
</UWSimScene>

